<div class="page-header">
  <h1>
    Skintones
    <a href="/skintones/new" class="btn btn-lg btn-success">New Skintone</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Color</th>
        <th>Actions</th>
      </tr>

      <% @skintones.each do |skintone| %>
      <tr>
        <td><%= skintone.color %></td>
        <td>
          <a href="/skintones/<%= skintone.id %>" class="btn btn-primary">Show</a>
          <a href="/skintones/<%= skintone.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_skintone/<%= skintone.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @skintones, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
