<div class="page-header">
  <h3>Photo #<%= @photo.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Skintone</dt>
      <dd>
        <% if @photo.skintone.present? %>
          <a href="/skintones/<%= @photo.skintone_id %>">
            <%= @photo.skintone.color %>
          </a>
        <% end %>
      </dd>

      <dt>Image</dt>
      <dd><img src="<%= @photo.image %>" class="img-responsive"></dd>

      <dt>Product</dt>
      <dd>
        <% if @photo.product.present? %>
          <a href="/products/<%= @photo.product_id %>">
            <%= @photo.product.brand %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/photos" class="btn btn-primary">
        Back
      </a>
      <a href="/photos/<%= @photo.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_photo/<%= @photo.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
