<!-- Validation failure messages -->
<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Photo</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_photo" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for skintone_id -->
      <div class="form-group">
        <label for="skintone_id" class="control-label">
          Skintone
        </label>

        <input type="text" id="skintone_id" name="skintone_id" placeholder="Skintone" class="form-control" value="<%= @photo.skintone_id %>">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @photo.image %>">
      </div>

      <!-- Label and input for product_id -->
      <div class="form-group">
        <label for="product_id" class="control-label">
          Product
        </label>

        <input type="text" id="product_id" name="product_id" placeholder="Product" class="form-control" value="<%= @photo.product_id %>">
      </div>

      <button class="btn btn-success">
        Create Photo
      </button>
      or
      <a href="/photos">Cancel</a>
    </form>
  </div>
</div>
